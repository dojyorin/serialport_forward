{
    "name": "Release",
    "on": {
        "push": {
            "tags": "v[0-9]+.[0-9]+.[0-9]+"
        }
    },
    "jobs": {
        "release": {
            "name": "Release: ${{github.ref_name}}",
            "runs-on": "ubuntu-latest",
            "steps": [{
                "name": "clone repository",
                "uses": "actions/checkout@v3"
            }, {
                "name": "install dotnet",
                "uses": "actions/setup-dotnet@v3",
                "with": {
                    "dotnet-version": "7.0.x"
                }
            }, {
                "name": "change project name",
                "run": "mv -f ./project.csproj ./serialportpipe.csproj"
            }, {
                "name": "build project (Linux)",
                "run": "dotnet publish -r linux-x64"
            }, {
                "name": "build project (OSX)",
                "run": "dotnet publish -r osx-x64"
            }, {
                "name": "build project (Windows)",
                "run": "dotnet publish -r win-x64"
            }, {
                "name": "dispatch release",
                "uses": "softprops/action-gh-release@v1",
                "with": {
                    "generate_release_notes": true,
                    "files": "./bin/linux-x64/serialportpipe\n./bin/osx-x64/serialportpipe\n./bin/win-x64/serialportpipe.exe"
                }
            }]
        }
    }
}